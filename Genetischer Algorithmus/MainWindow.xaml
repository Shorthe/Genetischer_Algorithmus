<Window x:Class="Genetic_Algorithm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="718"  Width="784">
    <StackPanel>
        <GroupBox Header="Parameter" Padding="10">
            <Grid>
                <Label Content="Grenzen" Height="28" HorizontalAlignment="Left" Margin="498,92,0,0" Name="label1" VerticalAlignment="Top" Width="62" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="566,94,0,0" Name="tbLowerBound" VerticalAlignment="Top" Width="39" Text="-10" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="611,94,0,0" Name="tbUpperBound" VerticalAlignment="Top" Width="39" Text="10" />
                <Label Content="Genanzahl" Height="28" HorizontalAlignment="Left" Margin="368,92,0,0" VerticalAlignment="Top" Width="70" />
                <TextBox Height="23" HorizontalAlignment="Right" Margin="0,93,255,0" Name="tbNumberGenes" Text="5" VerticalAlignment="Top" Width="39" />

                <Label Content="Generationen" Height="28" HorizontalAlignment="Left" Margin="12,8,0,0" Name="label3" VerticalAlignment="Top" Width="106" />
                <TextBox Height="23" Margin="143,10,0,0" Name="tbGenerations" VerticalAlignment="Top" FlowDirection="LeftToRight" Text="40" HorizontalAlignment="Left" Width="39" />
                <Label Content="Generationsgröße" Height="28" HorizontalAlignment="Left" Margin="12,36,0,0" Name="label9" VerticalAlignment="Top" Width="106" />
                <TextBox FlowDirection="LeftToRight" Height="23" Margin="143,38,0,0" Name="tbGenerationSize" Text="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="39" />
                <Label Content="Rekombinationen" Height="28" HorizontalAlignment="Left" Margin="12,65,0,0" Name="label4" VerticalAlignment="Top" Width="106" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="143,67,0,0" Name="tbRecombinations" VerticalAlignment="Top" Width="39" Text="60" />
                <Label Content="Mutationen" Height="28" HorizontalAlignment="Left" Margin="12,94,0,0" Name="label5" VerticalAlignment="Top" Width="106" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="87,96,0,0" Name="tbMutationsMin" Text="3" VerticalAlignment="Top" Width="39" />
                <Label Content=" - " Height="28" HorizontalAlignment="Left" Margin="124,94,0,0" Name="label8" VerticalAlignment="Top" Width="19" />
                <TextBox Height="23" HorizontalAlignment="Left" Margin="143,96,0,0" Name="tbMutationsMax" VerticalAlignment="Top" Width="39" Text="30" />

                <Label Content="Selektionsverfahren" Height="28" HorizontalAlignment="Left" Margin="213,10,0,0" Name="label10" VerticalAlignment="Top" Width="120" />
                <ComboBox Height="23" HorizontalAlignment="Left" Margin="213,36,0,0" Name="cbSelection" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Content="Deterministisch" IsSelected="True" />
                    <ComboBoxItem Content="Flaches Turnier" />
                    <ComboBoxItem Content="Stufen-Turnier" />
                </ComboBox>

                <Label Content="Gleichungssystem" Height="28" HorizontalAlignment="Left" Margin="355,9,0,0" Name="label6" VerticalAlignment="Top" Width="120" />
                <ComboBox Height="23" HorizontalAlignment="Left" Margin="355,36,0,0" Name="cbSystemOfEquation" VerticalAlignment="Top" Width="120" SelectionChanged="cbSystemOfEquation_SelectionChanged">
                    <ComboBoxItem Content="Standard" IsSelected="True" />
                    <ComboBoxItem Content="Griewank-Funktion" />
                    <ComboBoxItem Content="Ackley-Funktion" />
                    <ComboBoxItem Content="C-Funktion" />
                    <ComboBoxItem Content="Nullstellenberechnung" />
                </ComboBox>
                
                <Label Content="Mutationsrate" Height="28" HorizontalAlignment="Left" Margin="213,67,0,0" Name="label7" VerticalAlignment="Top" Width="120" />
                <ComboBox Height="23" HorizontalAlignment="Left" Margin="213,94,0,0" Name="cbMutationRate" VerticalAlignment="Top" Width="120" SelectionChanged="cbMutationRate_SelectionChanged">
                    <ComboBoxItem Content="konstant" IsSelected="True" />
                    <ComboBoxItem Content="linear" />
                    <ComboBoxItem Content="exponentiell" />
                </ComboBox>             
            </Grid>
        </GroupBox>
        <Button Content="Algorithmus ausführen" Height="23" HorizontalAlignment="Center" Margin="5" Name="button1" VerticalAlignment="Top" Width="153" Click="button1_Click" />
        <GroupBox Header="Ausgabe" HorizontalAlignment="Stretch" Padding="0,10,0,10">            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBox Height="180" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" IsReadOnly="True" Name="tbConsole" VerticalAlignment="Top" UseLayoutRounding="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                <Border 
                Grid.Row="1"
                Grid.Column="0"
                BorderThickness="1"
                BorderBrush="LightGray"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                    <Canvas Height="256" HorizontalAlignment="Left" Name="cvGraphs" VerticalAlignment="Top" Width="308" Grid.Column="1" Margin="14,1,0,0" />
                </Border>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
